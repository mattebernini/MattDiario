#:kivy 1.1.1

GridLayout:
    cols: 1

    Label:
        text: 'MattDiario'
        color: 0.98, 0.79, 0.14, 1
        background_color: 0.07, 0.06, 0.25, 1
        size_hint_y: 0.3 

    TextInput:
        id: title
        hint_text: 'Title'
        size_hint_x: 1
        size_hint_y: 0.3

    TextInput:
        id: date
        hint_text: 'Datetime (default: current date and time)'
        size_hint_x: 1
        size_hint_y: 0.3

    TextInput:
        id: category
        hint_text: 'Category'
        size_hint_x: 1
        size_hint_y: 0.3

    ScrollView:
        TextInput:
            id: content
            hint_text: 'Content'
            multiline: True

    GridLayout:
        cols: 3
        size_hint_y: 0.5  

        Button:
            text: 'Salva'
            width: 100
            background_color: 0.98, 0.79, 0.14, 1  # #f9ca24 color
            color: 0.07, 0.06, 0.25, 1  # #130f40 color
            on_press: app.save_pagina()

        Button:
            text: 'Leggi'
            width: 100
            background_color: 0.98, 0.79, 0.14, 1  # #f9ca24 color
            color: 0.07, 0.06, 0.25, 1  # #130f40 color
            on_press: app.leggi()

        Button:
            text: 'Sync'
            width: 100
            background_color: 0.98, 0.79, 0.14, 1  # #f9ca24 color
            color: 0.07, 0.06, 0.25, 1  # #130f40 color
            on_press: app.sincronizza()
